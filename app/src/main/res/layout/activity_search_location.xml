<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rujara.health.redlife.activity.SearchLocation">

    <RelativeLayout
        android:id="@+id/search_area"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_border_grey"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="Enter sample text..."
            android:paddingBottom="6dp"
            android:paddingLeft="35dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="Edit image icon"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_search_grey" />
    </RelativeLayout>

    <ListView
        android:id="@+id/search_location_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_below="@+id/search_area"
        android:background="@color/windowBackground"
        android:scrollbars="vertical"></ListView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/powered_by_google_on_white" />
</RelativeLayout>
