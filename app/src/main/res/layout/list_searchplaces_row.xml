<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/listIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-15dp"
            android:src="@drawable/ic_action_search_grey" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/listIcon"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/listIcon"
            android:layout_toRightOf="@+id/listIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="InMobi"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="33dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Marathahalli-Sarjapur Road, Bangaluru, Karnataka" />
    </RelativeLayout>
</LinearLayout>